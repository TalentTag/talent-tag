doctype 5
html
  head = render partial: 'partials/head'

  body lang="ru" ng-app="talent"
    #wrapper ng-controller="talent.MainCtrl"
      = render partial: "partials/header"
      = render partial: "partials/subscription"

      .row
        - if flash[:notice]
          .alert.alert-success = flash[:notice] 
        - if flash[:alert]
          .alert.alert-danger = flash[:alert]

        == yield
