.row ng-controller="talent.SourceCtrl"
  .col-md-8

    ul.nav.nav-tabs
      li ng-class="{ active: group=='all' }" : a href="javascript:;" ng-click="switchGroup('all')" Все
      li ng-class="{ active: group=='public' }" : a href="javascript:;" ng-click="switchGroup('public')" Опубликованные
      li ng-class="{ active: group=='hidden' })" : a href="javascript:;" ng-click="switchGroup('hidden')" Скрытые

    table.table.table-striped
      tr ng-repeat="source in sources | filter:{hidden: false} | orderBy:'name'"
        td : b = "{{ source.name }}"
        td = "{{ source.url }}"
        td.text-right
          a href="javascript:;"
            span.badge ng-hide="source.hidden" ng-click="source.toggle()" скрыть
            span.badge ng-show="source.hidden" ng-click="source.toggle()" опубликовать
